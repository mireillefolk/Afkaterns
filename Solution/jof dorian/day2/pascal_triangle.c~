                   #include<stdio.h>
                    long factorial(int);
                      int main()
                      {
                        
                       int i,n,c;  //variables declaration
                       printf("enter the number of rows you wish to see in pascal's triangle\n");
                        scanf("%d",&n)
                         for(i = 0; i < n; i++){
                          for(c = 0; c <= (n-i-2); c++)
                           for(c = 0; c <= i; c++)
                            printf("%1d",factorial(i)/factorial(c)*factorial(i-c)));
                              printf("/n");
                           }
                                 return 0;
                            }
                              long factorial(int n) // function calling
                               {
                                  int c;
                                  long result = 1;
                                    for(c = 1; c <= n; c++)
                                     {
                                       result = result*c;
                                         return result;
                                    }




